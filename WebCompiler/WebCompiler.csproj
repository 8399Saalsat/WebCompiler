<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFrameworks>netcoreapp3.1</TargetFrameworks>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>webcompiler</ToolCommandName>
        <Title>Web Compiler</Title>
        <PackageId>Excubo.WebCompiler</PackageId>

        <Authors>Stefan Lörwald, Mads Kristensen</Authors>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Version>1.0.0</Version>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="LibSassHost" Version="1.2.10" />
        <PackageReference Include="LibSassHost.Native.win-x64" Version="1.2.10" Condition=" '$(OS)' != 'Unix' " />
        <PackageReference Include="LibSassHost.Native.linux-x64" Version="1.2.10" Condition=" '$(OS)' == 'Unix' " />
        <PackageReference Include="Microsoft.Build.Framework" Version="16.5.0" PrivateAssets="All" />
        <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.5.0" PrivateAssets="All" />
        <PackageReference Include="NUglify" Version="1.5.14" />
    </ItemGroup>
</Project>